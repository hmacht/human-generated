<% if @verification_request.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@verification_request.errors.count, "error") %>:</h2>
    <ul>
      <% @verification_request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_with model: @verification_request do |f| %>
  <div class="verification_form">
    <div class="title">
      <p><%= f.label :title %></p>
      <%= f.text_area :title %>
    </div>

    <div class="content">
      <p><%= f.label :content %></p>
      <%= f.text_area :content %>
    </div>
  </div>
  <%= f.submit "Create Verification Request", class: "btn btn-primary" %>
<% end %>